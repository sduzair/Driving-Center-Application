<!DOCTYPE html>
<html lang="en">
<%- include ('layouts/header'); -%>

<body>
  <!-- Navigation-->
  <%- include ('layouts/nav'); -%>
  <!-- Page Header-->
  <header class="masthead-home-background masthead">
    <div class="container px-4 px-lg-5">
      <div class="row gx-6 gx-lg-6 justify-content-center">
        <div id="cards"
          class="row">
          <div class="col-md-4 col-sm-12">
            <div id="opaque-background"
              class="card text-white bg-primary mb-4">
              <a href="driver/dashboard">
                <div id="height-auto"
                  class="card-body">
                  <h5 class="card-title">Driver Interface</h5>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-4 col-sm-12">
            <div id="opaque-background"
              class="card text-white bg-primary mb-4">
              <a href="#">
                <div id="height-auto"
                  class="card-body">
                  <h5 class="card-title">Examiner Interface</h5>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-4 col-sm-12">
            <div id="opaque-background"
              class="card text-white bg-primary mb-4">
              <a href="#">
                <div id="height-auto"
                  class="card-body">
                  <h5 class="card-title">Admin</h5>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="custom-alerts">
    <!-- Validation Errors -->
    <% if( errors != null && errors.length > 0 ) { %>
    <% for( var i = 0; i < errors.length; i++ ) { %>
    <div class="custom-alert-red">
      <span class="closebtn"
        onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>Server:</strong> <%= errors[i] %>
    </div>
    <% } %>
    <% } %>
    <!-- Server Messages -->
    <% if( serverMsgs != null && serverMsgs.length > 0 ) { %>
    <% for( var i = 0; i < serverMsgs.length; i++ ) { %>
    <div class="custom-alert-yellow">
      <span class="closebtn"
        onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>Server:</strong> <%= serverMsgs[i] %>
    </div>
    <% } %>
    <% } %>
  </div>
  <%- include ('layouts/footer.ejs'); -%> <%- include ('layouts/scripts.ejs'); -%>
</body>

</html>
